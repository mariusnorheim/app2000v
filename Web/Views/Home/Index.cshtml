@model HomeModel
@{
    ViewData["Title"] = "Booking";
}


<div id="room" class="section bg-lightgrey">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <div class="col-md-6 col-md-offset-3">
            <form method="post">
                <br />
                <h4>Book room</h4>
                <hr />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="RoomBooking.DateFrom">Arrival</label>
                        <input asp-for="RoomBooking.DateFrom" class="form-control" type="date" />
                        <span asp-validation-for="RoomBooking.DateFrom" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="RoomBooking.DateTo">Departure</label>
                        <input asp-for="RoomBooking.DateTo" class="form-control" type="date" />
                        <span asp-validation-for="RoomBooking.DateTo" class="text-danger field-validation-valid"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RoomBooking.Roomtype">Roomtype</label>
                    <select asp-for="RoomBooking.Roomtype" class="form-control" />
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="hall" class="section bg-grey">
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <form method="post">
                <br />
                <h4>Book hall</h4>
                <hr />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="HallBooking.DateFrom">Arrival</label>
                        <input asp-for="HallBooking.DateFrom" class="form-control" type="date" />
                        <span asp-validation-for="HallBooking.DateFrom" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HallBooking.DateTo">Departure</label>
                        <input asp-for="HallBooking.DateTo" class="form-control" type="date" />
                        <span asp-validation-for="HallBooking.DateTo" class="text-danger field-validation-valid"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="HallBooking.Halltype">Halltype</label>
                    <select asp-for="HallBooking.Halltype" class="form-control" />
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

